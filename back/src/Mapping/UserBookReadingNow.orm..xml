<?xml version="1.0" encoding="UTF-8"?>
    <doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    
    <entity name="App\Entity\UserBookReadingNow" table="UserBookReadingNow" repository-class="App\Repository\UserBookReadingNowRepository">
        
        <one-to-one field="user_id" target-entity="User" inversed-by="UserBookReadingNow">
            <join-column name="user_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="book_id" target-entity="Book" inversed-by="UserBookReadingNow">
            <join-column name="book_id" referenced-column-name="id" />
        </one-to-one>
 
        <field name="active" type="boolean" column="active" nullable="false"/>
        
    </entity>
</doctrine-mapping>
