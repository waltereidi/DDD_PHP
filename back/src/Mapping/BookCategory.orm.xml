<?xml version="1.0" encoding="UTF-8"?>
    <doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    
    <entity name="App\Entity\BookCategory" table="Book_Category" repository-class="App\Repository\BookCategoryRepository">
        
        <field name="category_id"  type="string" length="255" column="category_id" nullable="false"/>
        
        <field name="book_id"  type="string" length="255" column="book_id" nullable="false"/>

        <one-to-one field="book" target-entity="Book" inversed-by="Book_Category">
            <join-column name="book_id" referenced-column-name="id" />
        </one-to-one>

        <one-to-one field="category" target-entity="Category" inversed-by="Book_Category">
            <join-column name="category_id" referenced-column-name="id" />
        </one-to-one>

    </entity>
</doctrine-mapping>
